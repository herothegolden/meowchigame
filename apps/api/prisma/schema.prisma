generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id        // tgId as string
  username     String?
  firstName    String?
  lastName     String?
  photoUrl     String?
  languageCode String?
  isPremium    Boolean  @default(false)
  isBot        Boolean  @default(false)
  xp           Int      @default(0)
  level        Int      @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  wallet       Wallet?
  rewards      UserReward[]
  sessions     GameSession[]
}

model Wallet {
  id        String   @id @default(cuid())
  userId    String   @unique
  balance   Int      @default(0)
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Catalog of available rewards
model Reward {
  id          String  @id @default(cuid())
  kind        String  // "digital" or "irl"
  title       String
  description String?
  costPoints  Int?
  costStars   Int?
  active      Boolean @default(true)
  payload     Json    @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userRewards UserReward[]

  @@index([active])
}

// User's claimed/purchased rewards
model UserReward {
  id        String   @id @default(cuid())
  userId    String
  rewardId  String
  points    Int      @default(0)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reward    Reward   @relation(fields: [rewardId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model GameSession {
  id        String   @id @default(cuid())
  userId    String
  levelId   String
  seed      String
  moves     Int
  score     Int
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([levelId, createdAt])
}
